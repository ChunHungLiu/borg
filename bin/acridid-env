#!/bin/bash

# get the acridid root
ACRIDID_PATH_FILE=~/.quest/paths/acridid

[ -f $ACRIDID_PATH_FILE ] || (echo "Configuration file not present." && exit -1)

# generate the relevant path components
R=$(eval "echo $(cat $ACRIDID_PATH_FILE)")
R_THIRD=$R/dep/third
R_CARGO=$R/dep/cargo

# execute the command in the updated environment
PYTHONPATH=$R_THIRD/sqlalchemy/lib:$R_CARGO/kit/src/python:$R_CARGO/ai-sat/src/python:$R_CARGO/unix/src/python:$R/src/python $@

