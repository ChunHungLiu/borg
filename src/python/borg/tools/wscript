def build(context):
    context(
        source = [
            "__init__.py",
            "calibrate.py",
            "get_features.py",
            "run_solvers.py",
            "run_validation.py",
            "solve.py",
            "train.py",
            "view_fit.py",
            "view_write.py",
            ],
        install_path = "${PYTHONDIR}/borg/tools",
        )

